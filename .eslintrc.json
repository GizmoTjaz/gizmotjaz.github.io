{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
		"plugin:vue/recommended"
    ],
    "plugins": [
        "vue"
    ],
    "rules": {
        "indent": [
            "error",
            "tab",
			{
				"SwitchCase": 1
			}
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
		"vue/script-indent": [
			"error",
			"tab",
			{
				"baseIndent": 1,
				"switchCase": 1
			}
		],
		"vue/html-indent": [
			"error",
			"tab"
		],
		"vue/singleline-html-element-content-newline": [
			"off"
		],
		"vue/max-attributes-per-line": [
			"error",
			{
				"singleline": 2
			}
		],
		"vue/script-setup-uses-vars": [
			"off"
		],
		"eqeqeq": [
			"error",
			"always"
		],
		"vue/eqeqeq": [
			"error",
			"always"
		],
		"prefer-const": "error"
    },
	"overrides": [
		{
			"files": ["*.vue"],
			"rules": {
				"indent": "off"
			}
		}
	]
}
