{
	"env": {
		"browser": true,
		"node": true
	},
	"extends": [
		"@nuxtjs/eslint-config-typescript",
		"./tslint.json",
		"./vuelint.json"
	],
	"parserOptions": {
		"ecmaVersion": 6,
		"parser": "@typescript-eslint/parser",
		"sourceType": "module",
		"project": [ "./tsconfig.json" ],
		"extraFileExtensions": [ ".vue" ]
	},
	"plugins": [
		"vue",
		"@typescript-eslint"
	]
}